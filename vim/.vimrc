filetype on
syntax on
set number
filetype indent on
set nowrap
set smartindent
set autoindent
set mouse=a
set expandtab
set tabstop=4
set shiftwidth=4
set wildmenu
set cursorcolumn
set cursorline
:set encoding=utf-8
autocmd FileType make setlocal noexpandtab
autocmd FileType yaml setlocal ts=2 sts=2 sw=2 expandtab
